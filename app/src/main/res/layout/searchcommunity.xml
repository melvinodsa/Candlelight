<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/searchlayout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_margin="5dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:textSize="10sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"/>
            <EditText
                android:textSize="10sp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/commonisearchname"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1" >
            <LinearLayout
                android:layout_weight="0.5"
                android:layout_margin="5dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:textSize="10sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Country"/>
                <Spinner
                    android:layout_margin="5dp"
                    android:id="@+id/searchcountry"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="0.5"
                android:layout_margin="5dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:textSize="10sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="State"/>
                <Spinner
                    android:layout_margin="5dp"
                    android:id="@+id/searchstate"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_margin="5dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:textSize="10sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="City"/>
            <EditText
                android:textSize="10sp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/commonisearchcity"/>
        </LinearLayout>
        <LinearLayout
            android:weightSum="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_weight="0.5"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <android.support.v7.widget.CardView
                    android:layout_marginLeft="10dp"
                    android:id="@+id/backfromcommunitysearch"
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    card_view:cardBackgroundColor="#ff01C2D4"
                    card_view:cardCornerRadius="6dp"
                    android:layout_marginBottom="20dp"
                    card_view:cardElevation="10dp">

                    <TextView
                        android:layout_marginRight="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="8.5dp"
                        android:paddingBottom="8.5dp"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:textColor="#de000000"
                        android:fontFamily="sans-serif-medium"
                        android:text="Search" />

                </android.support.v7.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="0.5"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <android.support.v7.widget.CardView
                    android:layout_marginLeft="10dp"
                    android:id="@+id/communitysearch"
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    card_view:cardBackgroundColor="#ff01C2D4"
                    card_view:cardCornerRadius="6dp"
                    android:layout_marginBottom="20dp"
                    card_view:cardElevation="10dp">

                    <TextView
                        android:layout_marginRight="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="8.5dp"
                        android:paddingBottom="8.5dp"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:textColor="#de000000"
                        android:fontFamily="sans-serif-medium"
                        android:text="Create" />

                </android.support.v7.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>