<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.CardView
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:textSize="15sp"
                    android:layout_margin="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/community_name"
                    android:textColor="#de000000"
                    android:fontFamily="sans-serif-medium"/>
                <LinearLayout
                    android:weightSum="3"
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/community_id"
                        android:visibility="invisible"/>
                    <TextView
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/community_country"
                        android:layout_alignParentTop="true"
                        android:textSize="15sp"/>
                    <TextView
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/community_state"
                        android:layout_alignParentTop="true"
                        android:textSize="15sp"/>
                    <TextView
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/community_city"
                        android:layout_alignParentTop="true"
                        android:textSize="15sp"/>
                </LinearLayout>
                <android.support.v7.widget.CardView
                    android:layout_marginRight="10dp"
                    android:layout_gravity="right"
                    android:id="@+id/searchjoinCommunity"
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    card_view:cardBackgroundColor="#ff01C2D4"
                    card_view:cardCornerRadius="6dp"
                    android:layout_marginBottom="20dp"
                    card_view:cardElevation="10dp">

                    <TextView
                        android:layout_marginRight="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="8.5dp"
                        android:paddingBottom="8.5dp"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:textColor="#de000000"
                        android:fontFamily="sans-serif-medium"
                        android:id="@+id/joinOrSearch"/>

                </android.support.v7.widget.CardView>
            </LinearLayout>

        </android.support.v7.widget.CardView>
    </LinearLayout>
</LinearLayout>